<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title><%= title %></title>
		<!-- Bootstrap Styling -->
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
			crossorigin="anonymous"
		/>
		<!-- Favicon -->
		<link
			rel="shortcut icon"
			href="<%= assetPath('images/favicon.png') %>"
			type="image/x-icon"
		/>
		<!-- CSS -->
		<link rel="stylesheet" href="<%= assetPath('css/layout.css') %>" />
		<%- style %>
		<!-- Bootstrap Scripting -->
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
			crossorigin="anonymous"
		></script>
		<!-- Font Awesome Icons -->
		<script
			src="https://kit.fontawesome.com/34162fcf4d.js"
			crossorigin="anonymous"
		></script>
		<!-- Javascript -->
		<script defer src="<%= assetPath('js/layout.js') %>"></script>
		<%- script %>
	</head>
	<body>
		<main style="--BG: url(<%=assetPath('images/background.jpg')%>)">
			<!-- Body -->
			<%- body %>
		</main>
		<!-- Toast -->
		<%- include('_toast.ejs'); %>

		<!-- Script -->
		<script defer>
			<% if(flash.success && flash.success.length > 0){ %>
				new Noty({
					theme: 'relax',
					text: '<%= flash.success %>',
					type:'success',
					layout:'topRight',
					timeout:3000
				}).show();
			<% } %>
			<% if(flash.error && flash.error.length > 0){ %>
				new Noty({
					theme: 'metroui',
					text: '<%= flash.error %>',
					type:'error',
					layout:'topRight',
					timeout:3000
				}).show();
			<% } %>
		</script>
		<!-- Script -->

	</body>
</html>